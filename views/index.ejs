<div class="container mt-5">
  <header class="text-center">
    <h1>Selamat Datang di Kopi Kopi</h1>
    <p>Rasakan pengalaman kopi terbaik dari biji berkualitas tinggi.</p>
  </header>

  <section class="mt-5">
    <h2>Produk Kami</h2>
    <div class="row">
      <% products.forEach(product => { %>
      <div class="col-md-4">
        <div class="card mb-4">
          <img
            src="<%= product.image %>"
            class="card-img-top"
            alt="<%= product.name %>"
            style="height: 200px; object-fit: cover"
          />
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= product.description %></p>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </section>

  <section class="mt-5">
    <h2>Apa Kata Pelanggan?</h2>
    <div class="row">
      <% testimonials.forEach(testimonial => { %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <blockquote class="blockquote mb-0">
              <p>"<%= testimonial.message %>"</p>
              <footer class="blockquote-footer"><%= testimonial.name %></footer>
            </blockquote>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </section>
</div>
